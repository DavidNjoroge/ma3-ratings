<form>
  <div class="form-group">
    {{input value=name class="form-control" id="name"  placeholder="Car Name"}}
  </div>
  <div class="form-group">
    {{input value=sacco class="form-control" id="sacco"  placeholder="SACCO"}}
  </div>
  <div class="form-group">
    {{input value=route class="form-control" id="route"  placeholder="ROUTE"}}
  </div>
  <div class="form-group">
    {{input value=rating type="number" class="form-control" id="rating"  placeholder="Rating"}}
  </div>
  <div class="form-group">
    {{input value=plate class="form-control" id="plate"  placeholder="Number plate"}}
  </div>
  <button {{action 'saveMatatu'}} type="submit" class="btn btn-primary">Submit</button>
</form>
